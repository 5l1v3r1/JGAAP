        </dependency>

        <!--System dependencies-->
        <dependency>
            <groupId>WordSegment</groupId>
            <artifactId>WordSegment</artifactId>
            <scope>system</scope>
            <version>1.0-SNAPSHOT</version>
            <systemPath>${basedir}/src/main/resources/WordSegment.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>edu.stanford.nlp</groupId>
            <artifactId>postagger</artifactId>
            <scope>system</scope>
            <version>2012-07-09</version>
            <systemPath>${basedir}/src/main/resources/stanford-postagger-2012-07-09.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>edu.stanford.nlp</groupId>
            <artifactId>ner</artifactId>
            <scope>system</scope>
            <version>2012-07-09</version>
            <systemPath>${basedir}/src/main/resources/stanford-ner-2012-07-09.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
